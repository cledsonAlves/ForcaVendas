<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/cinzaclaro" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.41"
            android:src="@drawable/novo64" />

        <TextView
            android:id="@+id/textViewNumPed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_weight="0.60"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/laranja"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textViewCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewNumPed"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:layout_weight="1.97"
            android:text="MOACIR FRANCO GUSMÃO ME "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C50045C4" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/cinzaclaro" >

        <TextView
            android:id="@+id/textViewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Tp .Venda :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewTpVenda"
            android:layout_width="85dp"
            android:layout_height="17dip"
            android:text="Orçamento"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/branco" />

        <TextView
            android:id="@+id/textViewCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="12/12/2012"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/branco" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:background="@color/cinzaclaro" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/plano"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewCondPag"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="7/14/21 (A Vista)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/branco" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Pag :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewTpPag"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="A Vista"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/branco" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dip"
        android:background="@color/cinzabrilhante">

        <TextView
            android:id="@+id/txtViewTabela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewQtItem"
            android:layout_marginLeft="23dp"
            android:text="@string/tvolumes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewQtItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtViewTabela"
            android:layout_alignParentTop="true"
            android:text="Tabela :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewQtde"
            android:layout_below="@+id/textViewQtde"
            android:text="@string/tliquido"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewQtde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtViewTabela"
            android:layout_below="@+id/txtViewTabela"
            android:text="@string/totalItens"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/textViewQtdVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtViewTabela"
            android:layout_alignBottom="@+id/txtViewTabela"
            android:layout_toRightOf="@+id/txtViewTabela"
            android:text="0.00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho" />

        <TextView
            android:id="@+id/textViewTotalItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/textViewQtdVolume"
            android:text="54"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho" />

        <TextView
            android:id="@+id/textViewTotalPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTotalItem"
            android:layout_toRightOf="@+id/textView7"
            android:text="125.50"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho" />

        <TextView
            android:id="@+id/textViewDataCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:text="Status : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/preto"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewDataCompra"
            android:layout_alignBottom="@+id/textViewDataCompra"
            android:layout_toRightOf="@+id/textViewDataCompra"
            android:text="Aguardando Trasmissão"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/branco"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewFilial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtViewTabela"
            android:text="60"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/vermelho" />

    </RelativeLayout>

</LinearLayout>